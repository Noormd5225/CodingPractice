  public void sortArrayByParity() {
        int[] nums={3,1,2,4};

        int left=0;
        for(int i=0;i<nums.length;i++){

            if(nums[i]%2==0){
                int temp=nums[left];
                nums[left]=nums[i];
                nums[left]=temp;
                left++;
            }
        }

       for(int x:nums){
           System.out.println(x);
       }
    }
